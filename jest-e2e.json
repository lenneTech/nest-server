{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "collectCoverageFrom": ["src/**/*.{ts,js}"],
  "testEnvironment": "node",
  "testRegex": "./tests/.*.e2e-spec.ts$",
  "reporters": [
    "default",
    "./tests/report.js"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 20000
}
