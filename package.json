{
  "name": "@lenne.tech/nest-server",
  "version": "0.0.19",
  "description": "Modern, fast, powerful Node.js web framework in TypeScript based on Nest with a GraphQL API and a connection to MongoDB (or other databases).",
  "keywords": [
    "node",
    "nest",
    "server",
    "mongodb",
    "graphql",
    "typescript"
  ],
  "author": "Kai Haase",
  "homepage": "http://lenne.tech",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "prestart:prod": "rimraf dist && npm run build",
    "reinit": "rimraf package-lock.json && rimraf node_modules && npm cache clean --force && npm i && npm run test:e2e",
    "start": "./node_modules/.bin/grunt",
    "stop": "./node_modules/.bin/pm2 delete nest",
    "start:prod": "./node_modules/.bin/grunt productive",
    "start:nodemon": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:dev": "nodemon",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --detectOpenHandles --config jest-e2e.json",
    "test:e2e-cov": "jest --detectOpenHandles --config jest-e2e.json --coverage",
    "test:watch": "jest --watch",
    "prepare": "npm run prestart:prod",
    "prepublishOnly": "npm run format && npm run lint && npm run test:e2e",
    "preversion": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lenneTech/nest-server"
  },
  "bugs": {
    "url": "https://github.com/lenneTech/nest-server/issues"
  },
  "engines": {
    "node": ">= 12.4.0"
  },
  "dependencies": {
    "@nestjs/common": "6.5.3",
    "@nestjs/core": "6.5.3",
    "@nestjs/graphql": "6.4.2",
    "@nestjs/jwt": "6.1.1",
    "@nestjs/passport": "6.1.0",
    "@nestjs/platform-express": "6.5.3",
    "@nestjs/testing": "6.5.3",
    "@nestjs/typeorm": "6.1.3",
    "@types/ejs": "2.6.3",
    "@types/jest": "24.0.17",
    "@types/lodash": "4.14.137",
    "@types/multer": "1.3.8",
    "@types/node": "12.7.2",
    "@types/nodemailer": "6.2.1",
    "@types/passport": "1.0.0",
    "@types/supertest": "2.0.8",
    "apollo-server-express": "2.8.1",
    "bcrypt": "3.0.6",
    "class-transformer": "0.2.3",
    "class-validator": "0.10.0",
    "ejs": "2.6.2",
    "fastify": "2.7.1",
    "graphql": "14.4.2",
    "graphql-subscriptions": "1.1.0",
    "grunt": "1.0.4",
    "grunt-bg-shell": "2.3.3",
    "grunt-contrib-clean": "2.0.0",
    "grunt-contrib-watch": "1.1.0",
    "grunt-sync": "0.8.1",
    "husky": "3.0.4",
    "jest": "24.9.0",
    "json-to-graphql-query": "1.9.0",
    "lodash": "4.17.15",
    "mongodb": "3.3.0",
    "nodemailer": "6.3.0",
    "nodemon": "1.19.1",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "pm2": "3.5.1",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.0",
    "rxjs": "6.5.2",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.18.0",
    "type-graphql": "0.17.4",
    "typeorm": "0.2.18",
    "typescript": "3.5.3"
  },
  "devDependencies": {
    "find-file-up": "2.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "ts-node extras/sync-version.ts && pretty-quick --staged",
      "pre-push": "npm run lint && npm run test:e2e"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ]
}
