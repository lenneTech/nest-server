{
  "name": "server",
  "version": "0.0.1",
  "description": "Server for uniTools",
  "author": "uniTools",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "prestart:prod": "rimraf dist && npm run build",
    "reinit": "rm package-lock.json && rm -rf node_modules && npm cache clean --force && npm i",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:dev": "nodemon",
    "start:prod": "node dist/main.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@nestjs/common": "6.0.2",
    "@nestjs/core": "6.0.2",
    "@nestjs/graphql": "6.0.2",
    "@nestjs/platform-express": "6.0.2",
    "@nestjs/platform-fastify": "6.0.2",
    "@nestjs/typeorm": "6.0.0",
    "apollo-server-express": "2.4.8",
    "apollo-server-fastify": "2.4.8",
    "class-transformer": "0.2.0",
    "class-validator": "0.9.1",
    "graphql": "14.1.1",
    "graphql-subscriptions": "1.0.0",
    "mongodb": "3.2.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.4.0",
    "type-graphql": "0.17.0",
    "typeorm": "^0.2.15"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/node": "11.11.6",
    "@types/supertest": "2.0.7",
    "@nestjs/testing": "6.0.2",
    "jest": "24.5.0",
    "nodemon": "1.18.10",
    "prettier": "1.16.4",
    "supertest": "4.0.2",
    "ts-jest": "24.0.0",
    "ts-node": "8.0.3",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.14.0",
    "typescript": "3.3.4000"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
