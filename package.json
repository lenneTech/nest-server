{
  "name": "@lenne.tech/nest-server",
  "version": "0.0.26",
  "description": "Modern, fast, powerful Node.js web framework in TypeScript based on Nest with a GraphQL API and a connection to MongoDB (or other databases).",
  "keywords": [
    "node",
    "nest",
    "server",
    "mongodb",
    "graphql",
    "typescript"
  ],
  "author": "Kai Haase",
  "homepage": "http://lenne.tech",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prestart:prod": "rimraf dist && npm run build",
    "reinit": "rimraf package-lock.json && rimraf node_modules && npm cache clean --force && npm i && npm run test:e2e",
    "start": "./node_modules/.bin/grunt",
    "stop": "./node_modules/.bin/pm2 delete nest",
    "start:prod": "./node_modules/.bin/grunt productive",
    "start:nodemon": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:dev": "nodemon",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --detectOpenHandles --config jest-e2e.json",
    "test:e2e-cov": "jest --detectOpenHandles --config jest-e2e.json --coverage",
    "test:watch": "jest --watch",
    "prepare": "npm run prestart:prod",
    "prepublishOnly": "npm run format && npm run lint && npm run test:e2e",
    "preversion": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lenneTech/nest-server"
  },
  "bugs": {
    "url": "https://github.com/lenneTech/nest-server/issues"
  },
  "engines": {
    "node": ">= 12.17.0"
  },
  "dependencies": {
    "@nestjs/common": "7.1.1",
    "@nestjs/core": "7.1.1",
    "@nestjs/graphql": "7.4.1",
    "@nestjs/jwt": "7.0.0",
    "@nestjs/passport": "7.0.0",
    "@nestjs/platform-express": "7.1.1",
    "@nestjs/testing": "7.1.1",
    "@nestjs/typeorm": "7.1.0",
    "@types/ejs": "3.0.4",
    "@types/jest": "25.2.3",
    "@types/lodash": "4.14.154",
    "@types/multer": "1.4.3",
    "@types/node": "14.0.6",
    "@types/nodemailer": "6.4.0",
    "@types/passport": "1.0.3",
    "@types/supertest": "2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "apollo-server-express": "2.14.2",
    "bcrypt": "4.0.1",
    "class-transformer": "0.2.3",
    "class-validator": "0.12.2",
    "ejs": "3.1.3",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "fastify": "2.14.1",
    "graphql": "14.6.0",
    "graphql-subscriptions": "1.1.0",
    "graphql-tools": "6.0.5",
    "grunt": "1.1.0",
    "grunt-bg-shell": "2.3.3",
    "grunt-contrib-clean": "2.0.0",
    "grunt-contrib-watch": "1.1.0",
    "grunt-sync": "0.8.2",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "json-to-graphql-query": "2.0.0",
    "lodash": "4.17.15",
    "mongodb": "3.5.8",
    "nodemailer": "6.4.8",
    "nodemon": "2.0.4",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "pm2": "4.4.0",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "supertest": "4.0.2",
    "ts-jest": "26.1.0",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "typeorm": "0.2.25",
    "typescript": "3.9.3"
  },
  "devDependencies": {
    "find-file-up": "2.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "ts-node extras/sync-version.ts && pretty-quick --staged",
      "pre-push": "npm run lint && npm run test:e2e"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ]
}
